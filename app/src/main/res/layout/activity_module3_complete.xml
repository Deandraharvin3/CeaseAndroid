<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mod3_back"
    android:backgroundTint="@color/cease_blue"
    android:backgroundTintMode="multiply"
    tools:context=".Module3Complete">

    <TextView
        android:id="@+id/tvComplete3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/archivo_black"
        android:text="Congratulations, you have completed all of the lessons in Module 3!"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/cease_tan"
        app:layout_constraintBottom_toTopOf="@+id/ivNextAct"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivNextAct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/rectangle2" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_alternates_bold"
        android:textColor="@color/cease_blue"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:text="Next Lesson"
        app:layout_constraintBottom_toBottomOf="@+id/ivNextAct"
        app:layout_constraintEnd_toEndOf="@+id/ivNextAct"
        app:layout_constraintStart_toStartOf="@+id/ivNextAct"
        app:layout_constraintTop_toTopOf="@+id/ivNextAct" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/congrats_image" />

